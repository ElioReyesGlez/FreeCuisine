<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    android:padding="@dimen/default_padding"
    tools:context=".ui.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/default_padding"
               android:layout_margin="@dimen/margin"
               android:layout_gravity="center">
               <ImageView
                   android:id="@+id/iv_app_ic_launcher"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:elevation="@dimen/default_elevation"
                   android:layout_centerHorizontal="true"
                   android:layout_margin="@dimen/default_margin"
                   android:contentDescription="@string/icon"
                   android:src="@drawable/ic_lunch_chef" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/iv_app_ic_launcher"
                   android:layout_margin="@dimen/regular_window_padding"
                   android:padding="@dimen/regular_window_padding"
                   android:text="@string/app_name"
                   android:textColor="@color/text_second_color"
                   android:textSize="@dimen/titles_text_size_full_view"
                   android:textStyle="bold" />
           </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:elevation="@dimen/default_elevation"
                android:background="@drawable/background_white"
                android:padding="@dimen/regular_window_padding">

                <TextView
                    android:id="@+id/tv_app_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_margin"
                    android:padding="@dimen/regular_window_padding"
                    android:textAlignment="center"
                    android:text="@string/description_about_page"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/description_text_size" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_top"
                android:padding="@dimen/regular_window_padding"
                android:text="@string/title1_about_page"
                android:theme="@style/tag_textView_title"/>

            <RelativeLayout
                android:id="@+id/rate_on_play_store"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:background="@drawable/selector_white"
                android:clickable="true"
                android:elevation="@dimen/default_elevation"
                android:focusable="true"
                android:padding="@dimen/regular_window_padding">

                <ImageView
                    android:id="@+id/play_store"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/about_icon_google_play" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toStartOf="@+id/icon_arrow_play_store"
                    android:layout_toEndOf="@id/play_store"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/play_store_about_page"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/titles_text_size" />

                <ImageView
                    android:id="@+id/icon_arrow_play_store"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/arrow"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="15dp"
                android:background="@drawable/selector_white"
                android:clickable="true"
                android:elevation="@dimen/default_elevation"
                android:focusable="true"
                android:padding="@dimen/regular_window_padding">

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toStartOf="@+id/icon_arrow_email"
                    android:layout_toEndOf="@id/contact"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/contact_us_about_page"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/titles_text_size" />

                <ImageView
                    android:id="@+id/icon_arrow_email"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/arrow"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:layout_marginTop="10dp"
                android:padding="@dimen/regular_window_padding"
                android:text="@string/title2_about_page"
                android:theme="@style/tag_textView_title" />

            <RelativeLayout
                android:id="@+id/developer1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/default_margin"
                android:background="@drawable/selector_white"
                android:clickable="true"
                android:elevation="@dimen/default_elevation"
                android:focusable="true"
                android:padding="@dimen/regular_window_padding">

                <ImageView
                    android:id="@+id/developer_image1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/about_icon_linkedin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toStartOf="@+id/icon_arrow_developer1"
                    android:layout_toEndOf="@id/developer_image1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/developer1_about_page"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/titles_text_size" />

                <ImageView
                    android:id="@+id/icon_arrow_developer1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/arrow"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/settings_item_margin_horizontal"
                android:background="@drawable/background_white"
                android:orientation="horizontal"
                android:padding="@dimen/default_padding">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_lunch_chef_mini" />

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_version_about_page"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/description_text_size"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>