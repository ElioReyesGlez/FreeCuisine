<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".ui.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <RelativeLayout
                android:id="@+id/rl_user_settings"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/default_margin"
                android:background="@drawable/selector_white"
                android:clickable="true"
                android:elevation="@dimen/default_elevation"
                android:focusable="true">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/float_transparent"
                    android:visibility="gone" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="24dp"
                    android:adjustViewBounds="true"
                    android:elevation="@dimen/default_elevation"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:srcCompat="@drawable/ic_user_profile" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@+id/iv_right_arrow_user"
                    android:layout_toEndOf="@+id/iv_profile"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/titles_text_size" />

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_username"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/iv_profile"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/default_padding"
                    android:text="@string/test_email"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/description_text_size" />

                <ImageView
                    android:id="@+id/iv_right_arrow_user"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="2dp"
                    android:contentDescription="@string/arrow"
                    android:src="@drawable/ic_arrow_right" />

                <Button
                    android:id="@+id/bt_login"
                    style="@style/ok_button"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/default_padding"
                    android:background="@drawable/selector_gray"
                    android:text="@string/login"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_vibration_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_marginTop="@dimen/settings_item_margin_horizontal"
                android:background="@drawable/background_white"
                android:elevation="@dimen/default_elevation"
                android:padding="@dimen/default_padding">

                <ImageView
                    android:id="@+id/ic_vibration"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/vibration"
                    android:src="@drawable/ic_vibration">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/switch_vibration"
                    android:layout_toEndOf="@+id/ic_vibration"
                    android:text="@string/vibration"
                    android:textAlignment="center"
                    android:textColor="@color/text_second_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shuffle_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_marginTop="@dimen/settings_item_margin_horizontal"
                android:background="@drawable/background_white"
                android:elevation="@dimen/default_elevation"
                android:padding="@dimen/default_padding">

                <ImageView
                    android:id="@+id/ic_shuffle"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/vibration"
                    android:src="@drawable/ic_shuffle">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/switch_shuffle"
                    android:layout_toEndOf="@+id/ic_shuffle"
                    android:text="@string/shuffle"
                    android:textAlignment="center"
                    android:textColor="@color/text_second_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_shuffle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_about_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_marginTop="@dimen/settings_item_margin_horizontal"
                android:background="@drawable/selector_white"
                android:elevation="@dimen/default_elevation"
                android:padding="@dimen/default_padding"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/icon_about"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_about" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow_about"
                    android:text="@string/about"
                    android:textAlignment="center"
                    android:textColor="@color/text_second_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_arrow_about"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/arrow"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>