<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/custom_white_text_color"
    card_view:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative_layout_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0.5dp"
        android:background="@drawable/border">

        <ImageButton
            android:id="@+id/ib_link_container"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/selector_light_green"
            android:src="@drawable/ic_exit_link"
            android:layout_margin="@dimen/default_margin"
            android:padding="@dimen/default_padding"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/exit_links_container"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_preparation_number_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/titles_text_size_full_view"
            android:text="1"
            android:textColor="@color/md_grey_700"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ib_link_container"/>

        <TextView
            android:id="@+id/tv_preparation_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_below="@+id/tv_preparation_number_order"
            android:padding="@dimen/default_padding"
            android:text="@string/lorem_ipsum"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/description_text_size_full_view" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>