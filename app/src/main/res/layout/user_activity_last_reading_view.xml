<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/last_reading_main_card_container"
    card_view:cardBackgroundColor="@color/custom_white_text_color"
    card_view:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_top"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ic_daily_verse"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/ic_last_recipe"
                android:layout_margin="@dimen/default_margin"
                android:src="@drawable/ic_recipe_chef_hot">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@id/ic_daily_verse"
                android:text="@string/last_reading"
                android:textAlignment="center"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/titles_text_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white">

            <HorizontalScrollView
                android:id="@+id/scroll_tags_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:scrollbars="none"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/tags_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:elevation="@dimen/default_elevation"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/filter_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:padding="@dimen/regular_window_padding"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="#test1"
                        android:textAlignment="center"
                        android:textColor="@color/gray_btn_bg_darker_color"
                        android:background="@drawable/background_gray"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/filter_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:padding="@dimen/regular_window_padding"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:text="#test2"
                        android:textAlignment="center"
                        android:textColor="@color/gray_btn_bg_darker_color"
                        android:background="@drawable/background_gray"
                        android:textStyle="bold" />

                </LinearLayout>

            </HorizontalScrollView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recipe_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/scroll_tags_container"
                android:contentDescription="@string/recipe_image"
                android:transitionName="@string/recipe_image_transition_name"/>

            <LinearLayout
                android:id="@+id/recipe_text_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/recipe_main_image"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/titles_text_size"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/app_name"
                    android:textColor="@color/text_second_color"/>

                <TextView
                    android:id="@+id/recipe_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="1dp"
                    android:layout_marginTop="@dimen/default_margin"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_grey_500"
                    android:textSize="13sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/recipes_cooking_time_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_text_container"
                android:layout_toStartOf="@+id/recipes_amount_container"
                android:layout_margin="@dimen/default_margin">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="1dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_clock"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cocking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="45m"
                    android:textColor="@color/md_grey_700"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/iv_clock"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recipes_amount_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_text_container"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/default_margin">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_people_amount"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="1dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_users"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_people_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_700"
                    android:text="4"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/iv_people_amount"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>