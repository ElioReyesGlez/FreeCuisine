<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/custom_white_text_color"
    card_view:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative_layout_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0.5dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/tv_preparation_number_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_accent_light"
            android:textStyle="bold"
            android:textSize="@dimen/titles_text_size_full_view"
            android:text="1"
            android:textColor="@color/md_grey_700"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_preparation_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_below="@+id/tv_preparation_number_order"
            android:padding="@dimen/default_padding"
            android:text="@string/lorem_ipsum"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/description_text_size_full_view" />

    <!--    <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_below="@+id/tv_preparation_description"
            android:padding="@dimen/default_padding"
            android:textStyle="italic"
            android:text="@string/lorem_ipsum"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/description_text_size" />-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_step_preparation_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/default_margin"
            android:elevation="@dimen/default_elevation"
            android:layout_marginBottom="@dimen/margin"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:adjustViewBounds="true"
            android:layout_below="@+id/tv_preparation_description"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>